{
  "version": 2,
  "name": "kauri-serverless",
  "build": {
    "env": {
      "config": "production-config"
    }
  },
  "builds": [
    {
      "src": "app/package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)/(.*)/a",
      "dest": "/app/article?article_id=$2"
    },
    {
      "src": "/(.*)/(.*)/c",
      "dest": "/app/collection?collection_id=$2"
    },
    {
      "src": "/public-profile/(.*)",
      "dest": "/app/public-profile?user_id=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app/$1"
    }
  ]
}