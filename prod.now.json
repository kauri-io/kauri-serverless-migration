{
  "version": 2,
  "name": "kauri-serverless",
  "build": {
    "env": {
      "config": "production"
    }
  },
  "builds": [
    {
      "src": "app/static/**",
      "use": "@now/static"
    },
    {
      "src": "app/package.json",
      "use": "@now/next"
    },
    {
      "src": "api/*",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/app/static/favicon/favicon.ico"
    },
    {
      "src": "/static/(.*)",
      "dest": "/app/static/$1"
    },
    {
      "src": "/",
      "dest": "/app/maintenance"
    },
    {
      "src": "/(.*)",
      "dest": "/app/maintenance"
    },
    {
      "src": "/(.*)/(.*)",
      "dest": "/app/maintenance"
    },
    {
      "src": "/(.*)/(.*)/(.*)",
      "dest": "/app/maintenance"
    }
  ]
}